            </tr>
            <tr>
                <th>Canteen</th>
                <td>{{ daily_attendance.canteen ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Afternoon</th>
                <td>{{ daily_attendance.afternoon ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ daily_attendance.notes }}</td>
            </tr>
        </tbody>
    </table>

