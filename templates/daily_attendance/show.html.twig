{% block title %}DailyAttendance{% endblock %}

{% block body %}
    <h1>DailyAttendance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ daily_attendance.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ daily_attendance.date ? daily_attendance.date|date('Y-m-d') : '' }}</td>
            </tr>
