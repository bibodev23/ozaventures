{% extends 'base.html.twig' %}

{% block title %}Kid{% endblock %}
    {% block classPage %}Fiche enfant{% endblock %}
{% block header %}
    <h1>Fiche enfant</h1>
{% endblock %}
{% block body %}
    <table class="table row">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ kid.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ kid.lastname }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ kid.age }} ans</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ kid.notes }} </td>
            </tr>
        </tbody>
    </table>
    <div class="list-actions">
        <a href="{{ path('app_kid_index') }}" class="btn">Retour à la liste</a>
        <a href="{{ path('app_kid_edit', {'id': kid.id}) }}" class="btn green">Modifier</a>
        {{ include('kid/_delete_form.html.twig') }}
    </div>
{% endblock %}
