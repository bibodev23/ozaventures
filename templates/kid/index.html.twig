            </tr>
        </thead>
        <tbody>
        {% for kid in kids6To12 %}
            <tr>
                <td>{{ kid.firstname }}</td>
                <td>{{ kid.lastname }}</td>
                <td>{{ kid.age }}</td>
                <td>
                    <a href="{{ path('app_kid_show', {'id': kid.id}) }}">Voir</a>
                    <a href="{{ path('app_kid_edit', {'id': kid.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
