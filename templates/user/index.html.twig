{% extends 'base.html.twig' %}

{% block title %}Liste des animateurs{% endblock %}
{% block classPage %}user-index
{% endblock %}
    {% block header %}
	<h1>Liste des animateurs</h1>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Animateur</th>
                {# <th>Roles</th>
                <th>Password</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username|capitalize }}</td>
                {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td> #}
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
