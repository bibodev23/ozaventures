{{ form_start(form) }}
<div class="input">
	{{ form_label(form.title) }}
	{{ form_widget(form.title) }}
</div>
<div class="input">
	{{ form_label(form.location) }}
	{{ form_widget(form.location) }}
</div>
<div class="input">
	{{ form_label(form.date) }}
	{{ form_widget(form.date) }}
</div>
<div class="two-columns">

	<div class="input">
		{{ form_label(form.timeGo) }}
		{{ form_widget(form.timeGo) }}
	</div>
	<div class="input">
		{{ form_label(form.timeBack) }}
		{{ form_widget(form.timeBack) }}
	</div>
</div>

<div class="input">
	{{ form_label(form.animators) }}
	{% for animator in form.animators %}
		<div class="chexbock">
			{{ form_widget(animator) }}
			{{ form_label(animator, null, {label_attr: {'class': 'checkbox-label'}}) }}
		</div>
	{% endfor %}
</div>
<div class="input">
	{{ form_label(form.kids, "Groupe") }}
	<h3>3–5 ans</h3>
	{% for child in form.kids %}
		{% if child.vars.attr['data-group'] == '3-5' %}
			<div class="checkbox">
				{{ form_widget(child) }}
				{{ form_label(child, null, {'label_attr': {'class': 'checkbox-label'}}) }}
			</div>
		{% endif %}
	{% endfor %}

	<h3>6–12 ans</h3>
	{% for child in form.kids %}
		{% if child.vars.attr['data-group'] == '6-12' %}
			<div class="checkbox">
				{{ form_widget(child) }}
				{{ form_label(child, null, {'label_attr': {'class': 'checkbox-label'}}) }}
			</div>
		{% endif %}
	{% endfor %}
</div>
<div class="input">
	{{ form_label(form.notes) }}
	{{ form_widget(form.notes) }}
</div>
<button class="btn green">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
