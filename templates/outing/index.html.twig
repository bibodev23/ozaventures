{% extends 'base.html.twig' %}

{% block title %}Outing index{% endblock %}

{% block body %}
    <h1>Outing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for outing in outings %}
            <tr>
                <td>{{ outing.id }}</td>
                <td>{{ outing.title }}</td>
                <td>
                    <a href="{{ path('app_outing_show', {'id': outing.id}) }}">show</a>
                    <a href="{{ path('app_outing_edit', {'id': outing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_outing_new') }}">Create new</a>
{% endblock %}
